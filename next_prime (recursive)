#include <stdio.h>
#include <stdlib.h>
int ft_is_prime(int nb);

int ft_find_next_prime(int nb)
{
    if (nb <= 2)
        return 2;

    if(ft_is_prime(nb) == 1)
        return nb;
    else
        return (ft_find_next_prime(nb+1));
}

int ft_is_prime(int nb)
{
    int divisor = 2;

    while(divisor * divisor <= nb)
    {
        if (nb % divisor == 0)
        {
            return (0);
        }
        divisor++;

    }
    return (1);
}


int main(int argc, char *argv[])
{
    printf("%i\n", ft_find_next_prime(atoi(argv[1])));
    return 0;
}
